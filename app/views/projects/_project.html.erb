  <div class="col-6 col-sm-4 col-md-3 py-2">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"> 
        <%= project.title %>
        <%= link_to icon('fa-solid', 'pen-to-square'), edit_project_path(project) %>
        </h5>
      <div class="card-text">
        <div> <%= project.description%> </div>
        <div> <strong>Department: </strong><%= project.department%> </div>
      </div>
      
      <%= link_to("Show this project", project, class: "btn btn-primary")%>
      </div>
    </div>
  </div>
