<% flash.each do |key, value| %>
  <% if key == "alert" %>
   <% key = "danger" %>
  <% elsif key == "notice" %>
   <% key = "info" %>
  <% end %>
  <div class="alert alert-<%=key%> alert-dismissible fade show" role="alert">
    <%= value %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>