<h1>Users</h1>
<%= render 'add_user'%>

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addUserModal">
  Add user
</button>

<div id="users">
  <div class="container-fluid text-center">
    <table class="table mt-4">
    <thead>
    <th> Email </th>
    <th> Username </th>
    <th> Role </th>
    <th> Created at </th>
    </thead>
    <tbody>
    <% @users.each do |user| %>
    <tr>
      <td> <%= user.email %> </td>
      <td> <%= user.username %> </td>
      <td> <%= user.role %> </td>
      <td> <%= user.created_at %> </td>
    </tr>
    <% end %>
    </tbody>
    </table>    
  </div>
</div>

